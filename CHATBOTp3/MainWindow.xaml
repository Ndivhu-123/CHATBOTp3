<Window x:Class="CHATBOTp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="590" Width="800"
        Background="#FFD3D3D3">

    <Grid x:Name="MainGrid">

        <!-- WELCOME SCREEN -->
        <Grid x:Name="WelcomeGrid" Background="#D3D3D3">
            <Border Background="#D3D3D3"
                    BorderBrush="HotPink"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Height="483"
                    Width="700"
                    Margin="0,10,0,0">
                <StackPanel VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="169,196,0,0"
                            Width="513">
                    <TextBlock Text="WELCOME TO CHATBOT"
                               Foreground="HotPink"
                               FontSize="20"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               Margin="0,0,0,50"/>

                    <TextBlock Text=" Cybersecurity Assistant"
                               Foreground="White"
                               FontSize="12"
                               TextAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Please enter your first name to get started"
                               Foreground="White"
                               FontSize="10"
                               TextAlignment="Center"
                               Margin="0,0,0,20"/>

                    <TextBox x:Name="userNameBox"
                             Width="300"
                             Height="35"
                             FontSize="16"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,20"/>

                    <Button Content="Continue"
                            Width="150"
                            Height="40"
                            Background="HotPink"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"
                            Click="Continue_Click"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- CHAT INTERFACE -->
        <Grid x:Name="ChatGrid"
      Visibility="Collapsed"
      Background="#FFEFF0F2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <!-- Left menu -->
                <ColumnDefinition Width="*"/>
                <!-- Chat -->
                <ColumnDefinition x:Name="TaskColumn" Width="0"/>
                <!-- Hidden Manage Task panel -->
            </Grid.ColumnDefinitions>

            <!-- LEFT: MENU -->
            <Border Grid.Column="0"
            Background="#FFE8E8E8"
            CornerRadius="8"
            Margin="10"
            BorderBrush="HotPink"
            BorderThickness="2">

                <StackPanel VerticalAlignment="Center" Margin="15">

                    <!-- Chatbot Branding -->
                    <StackPanel Margin="0,10,0,20" HorizontalAlignment="Center">
                        <TextBlock Text="CHATBOT Ai"
                   FontSize="29"
                   FontWeight="Bold"
                   Foreground="Black"
                   TextAlignment="Center"/>

                        <TextBlock Text="-cybersecurity assistant"
                   FontSize="12"
                   FontStyle="Italic"
                   Foreground="Black"
                   TextAlignment="Center"
                   Margin="0,-5,0,0"/>
                    </StackPanel>

                    <TextBlock Text="MENU"
               FontSize="18"
               FontWeight="Bold"
               Foreground="HotPink"
               Margin="10,0,0,25"
               HorizontalAlignment="Center"/>

                    <Button Content="Ask Questions"
                    Background="#FFD3D3D3"
                    Foreground="Black"
                    FontWeight="Bold"
                    FontSize="14"
                    Height="40"
                    Margin="0,5"
                    Click="AskQuestions_Click"/>

                    <Button Content="Manage Tasks"
                    Background="#FFD3D3D3"
                    Foreground="Black"
                    FontWeight="Bold"
                    FontSize="14"
                    Height="40"
                    Margin="0,5"
                    Click="ToggleTaskPanel_Click"/>
                    <!-- Insert this below your Chat Panel or as part of the central column -->

                    <Grid Grid.Column="1"
      x:Name="QuizPanel"
      Visibility="Collapsed"
      Background="#FFFAFAFA"
      Margin="10">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="400">
                            <!-- Quiz question -->
                            <TextBlock x:Name="QuizQuestionText"
                   TextWrapping="Wrap"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0,0,0,10"
                   TextAlignment="Center"/>

                            <!-- Answer options -->
                            <ListBox x:Name="QuizAnswersList"
                 Margin="0,0,0,20"
                 SelectionMode="Single"
                 FontSize="14"
                 BorderBrush="#FF007ACC"
                 BorderThickness="1"
                 Background="White"/>

                            <!-- Submit answer button -->
                            <Button Content="Submit Answer"
                Background="#FF007ACC"
                Foreground="White"
                FontWeight="Bold"
                FontSize="14"
                Height="40"
                Width="150"
                Click="SubmitQuizAnswer_Click"
                Margin="0,0,0,10"
                HorizontalAlignment="Center"/>

                            <!-- Start quiz button -->
                            <Button Content="Start Quiz"
                Background="#FFD3D3D3"
                Foreground="Black"
                FontWeight="Bold"
                FontSize="14"
                Height="40"
                Width="150"
                Click="StartQuiz_Click"
                HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- activity log -->
                    <Button Content="Activity Log"
        Background="#FFD3D3D3"
        Foreground="Black"
        FontWeight="Bold"
        FontSize="14"
        Height="40"
        Margin="0,5"
        Click="OpenActivityLog_Click"/>

                </StackPanel>
            </Border>

            <!-- RIGHT: Manage Task Panel -->
            <Border Grid.Column="2"
        Background="Black"
        Margin="10"
        Padding="10"
        CornerRadius="8"
        BorderBrush="HotPink"
        BorderThickness="2"
        Visibility="Collapsed"
        x:Name="Manage_Task">
                <StackPanel>
                    <TextBlock Text="Task Title:" Foreground="White" Margin="5,5,5,0"/>
                    <TextBox x:Name="TaskTitleBox" Margin="5"/>

                    <TextBlock Text="Description:" Foreground="White" Margin="5,5,5,0"/>
                    <TextBox x:Name="TaskDescBox" Margin="5"/>

                    <TextBlock Text="Reminder Date:" Foreground="White" Margin="5,5,5,0"/>
                    <DatePicker x:Name="TaskReminderDate" Margin="5"/>

                    <Button Content="Add Task"
                Click="AddTask_Click"
                Background="LightPink"
                Foreground="White"
                FontWeight="Bold"
                Margin="0,5"/>

                    <ListBox x:Name="TaskListBox"
                 Height="100"
                 Margin="5"/>
                </StackPanel>
            </Border>

            <!-- RIGHT: CHAT / TASK PANEL -->
            <Border Grid.Column="1"
            Background="White"
            CornerRadius="10"
            Margin="10"
            BorderBrush="HotPink"
            BorderThickness="2">
                <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="20">
                    <ListView x:Name="show_chat"
                      Height="550"
                      Width="790"
                      MouseDoubleClick="show_chat_MouseDoubleClick"
                      Background="#FFF7D8F0"
                      BorderBrush="Gray"
                      BorderThickness="1"
                      Margin="0,0,0,20"/>

                    

                    <!-- CHAT INPUT AREA WITH PLACEHOLDER -->
                    <Grid>
                        <TextBox x:Name="user_questions"
             Height="35"
             Width="800"
             FontSize="14"
             Foreground="Black"
             Background="#FFF7D8F0"
             BorderBrush="HotPink"
             BorderThickness="1"
             Margin="0,0,0,50"
             TextChanged="user_questions_TextChanged"/>

                        <TextBlock x:Name="userPlaceholder"
               Text="start typing"
               FontStyle="Italic"
               Foreground="DarkGray"
               Margin="12,8,0,0"
               IsHitTestVisible="False"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Visibility="Visible"/>
                    </Grid>

                    <Button Content="SEND"
        Height="45"
        Width="680"
        Click="send_question"
        Background="#FFD3D3D3"
        Foreground="Black"
        FontWeight="Bold"
        FontSize="14"
        BorderBrush="HotPink"
        BorderThickness="1"/>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>

</Window>